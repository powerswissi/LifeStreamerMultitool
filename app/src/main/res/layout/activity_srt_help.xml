<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true"
  android:fitsSystemWindows="true">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="48dp">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="How to use SRT as source"
      android:textSize="28sp"
      android:textStyle="bold"
      android:paddingBottom="16dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="What is SRT source?"
      android:textSize="20sp"
      android:textStyle="bold"
      android:paddingTop="8dp"
      android:paddingBottom="8dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="SRT (Secure Reliable Transport) as source allows you to use an SRT stream as a video and audio source instead of the device camera and microphone. SRT is a modern streaming protocol that provides low latency and reliable delivery over unpredictable networks."
      android:textSize="16sp"
      android:lineSpacingMultiplier="1.2"
      android:paddingBottom="16dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="How to configure SRT URL"
      android:textSize="20sp"
      android:textStyle="bold"
      android:paddingTop="8dp"
      android:paddingBottom="8dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="You can enter an SRT URL on the settings screen into RTMP source URL field. The app will automatically detect that it is an SRT URL and use the SRT protocol.\n\nSRT URL format:\nsrt://hostname:port?streamid=your_stream_id\n\nMediaMTX server example:\nsrt://localhost:8890?streamid=read:mystream\n\nsrt-live-transmit example:\nsrt://localhost:10000"
      android:textSize="16sp"
      android:lineSpacingMultiplier="1.2"
      android:paddingBottom="16dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Caller mode only"
      android:textSize="20sp"
      android:textStyle="bold"
      android:paddingTop="8dp"
      android:paddingBottom="8dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="The LifeStreamer app connects to SRT servers in caller mode only. This means the SRT server must be running and listening for connections before you try to connect from LifeStreamer."
      android:textSize="16sp"
      android:lineSpacingMultiplier="1.2"
      android:paddingBottom="16dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Audio capture"
      android:textSize="20sp"
      android:textStyle="bold"
      android:paddingTop="8dp"
      android:paddingBottom="8dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="SRT audio capture works the same way as RTMP audio capture. The app uses Media Projection API to capture the audio from the SRT player. When prompted, allow the app to record screen and audio."
      android:textSize="16sp"
      android:lineSpacingMultiplier="1.2"
      android:paddingBottom="16dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="SRT source UI = RTMP source UI"
      android:textSize="20sp"
      android:textStyle="bold"
      android:paddingTop="8dp"
      android:paddingBottom="8dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="For now SRT source will use the same UI as RTMP source. So it will say RTMP in place of SRT everywhere."
      android:textSize="16sp"
      android:lineSpacingMultiplier="1.2"
      android:paddingBottom="16dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="How to run SRT server on Android"
      android:textSize="20sp"
      android:textStyle="bold"
      android:paddingTop="8dp"
      android:paddingBottom="8dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="You can run a server like MediaMTX in Termux. It's a bit advanced. Check the video how to set it up here: https://youtu.be/5H0AZca3nk4?si=yaAxqQ5-FW5GnKpq&amp;t=310"
      android:textSize="16sp"
      android:lineSpacingMultiplier="1.2"
      android:autoLink="web"
      android:linksClickable="true"
      android:paddingBottom="16dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="You can also try using srt-live-transmit tool in Termux. Research how to install it. Run this in Termux when you have it installed:\n\n# Receive SRT on port 9000 and output on port 10000\nsrt-live-transmit srt://:9000 srt://:10000"
      android:textSize="16sp"
      android:lineSpacingMultiplier="1.2"
      android:paddingBottom="16dp" />

  </LinearLayout>
</ScrollView>